<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/full_spacer"
        android:background="@drawable/round_background"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/user_input"
            tools:hint="1234"
            android:hint="@string/enter_passcode_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brand"
            android:textSize="30sp"/>

        <View
            android:background="@color/brand"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/one"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:text="1"
                android:textSize="25sp"
                android:layout_margin="@dimen/half_spacer"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="2"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>
            <TextView
                android:id="@+id/three"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="3"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/four"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:text="4"
                android:textSize="25sp"
                android:layout_margin="@dimen/half_spacer"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/five"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="5"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/six"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="6"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/seven"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:text="7"
                android:textSize="25sp"
                android:layout_margin="@dimen/half_spacer"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/eight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="8"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>
            <TextView
                android:id="@+id/nine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="9"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="@dimen/half_spacer"/>

            <TextView
                android:id="@+id/zero"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="0"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/clear"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/passcode_circle"
                android:layout_margin="@dimen/half_spacer"
                android:text="CLR"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/primary"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
