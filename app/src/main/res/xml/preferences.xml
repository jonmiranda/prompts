<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/security">

        <CheckBoxPreference
            android:key="@string/passcode_enabled_key"
            android:title="Enable Passcode"
            android:defaultValue="false" />

        <EditTextPreference
            android:key="@string/set_passcode_key"
            android:title="Set Passcode"
            android:dialogMessage="Please input a 4 digit passcode."
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Export">
        <Preference
            android:key="@string/export_key"
            android:title="Export as JSON"/>
    </PreferenceCategory>

</PreferenceScreen>
